<?xml version="1.0"?>
<Template>
	<TemplateConfiguration>
		<_Name>Form (with form preview)</_Name>
		<Icon>md-text-file-icon</Icon>
		<_Category>Eto.Forms</_Category>
		<LanguageName>C#</LanguageName>
		<_Description><![CDATA[Creates a new Eto.Forms cross platform form class using C#.

This template provides a partial *.eto.cs file for form preview.]]>
		</_Description>
		<DefaultFilename>MyForm</DefaultFilename>
		<GroupId>eto-file-panel</GroupId>
	</TemplateConfiguration>
	<TemplateFiles>
        <File name="${Name}.cs" AddStandardHeader="true" src="preview.panel.cs"/>
        <File name="${Name}.eto.cs" AddStandardHeader="true" src="preview.form.eto.cs" DependsOn="${Name}.cs" />
	</TemplateFiles>
</Template>
